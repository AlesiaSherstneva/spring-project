<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="musicBean1"
          class="com.udemy.springcourse.ClassicalMusic">
    </bean>

    <bean id="musicBean2"
          class="com.udemy.springcourse.RockMusic">
    </bean>

    <bean id="musicBean3"
          class="com.udemy.springcourse.RapMusic">
    </bean>

    <bean id="musicGenres"
        class="com.udemy.springcourse.Genres">
        <property name="musicList">
            <list>
                <ref bean="musicBean1"/>
                <ref bean="musicBean2"/>
                <ref bean="musicBean3"/>
            </list>
        </property>
    </bean>

    <bean id="musicPlayer"
          class="com.udemy.springcourse.MusicPlayer">
        <constructor-arg ref="musicGenres"/>
    </bean>

</beans>